@model _1_EC.Linea

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Alta Línea de Venta</h2>

@ViewBag.Mensaje

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <table class="table-bordered">
            <tr>
                <td>
                    @Html.LabelFor(model => model.Cant, htmlAttributes: new { @class = "control-label col-md-2" })
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Cant, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Label("Articulo", htmlAttributes: new { @class = "control-label col-md-2" })
                </td>
                <td>
                    @Html.DropDownList("codigoArt", (SelectList)ViewBag.ListaArticulos, "Selecciona Artículo")
                </td>
            </tr>
            <tr>
                <td>
                    <input type="submit" value="Agregar Linea" class="btn btn-default" />
                </td>
                <td>
                    @Html.ActionLink("Terminar Factura", "GuardarVenta", null, new { @class = "btn btn-default" })
                </td>
            </tr>
        </table>
    </div>
}
