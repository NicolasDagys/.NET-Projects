@model IEnumerable<_1_EC.Venta>

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Ventas Asociadas al Artículo </h2>

@ViewBag.Mensaje

<td>
    @Html.ActionLink("Volver a Listado Interactivo", "ListadoInteractivoArticulos", "Articulo")
</td>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NumVent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaVent)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumVent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaVent)
            </td>


        </tr>
    }

</table>
