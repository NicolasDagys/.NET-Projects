@model IEnumerable<_1_EC.Venta>

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Seguimiento de Venta</h2>

<p>
    @ViewBag.Mensaje
</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table>
        <tr>
            <td>
                @Html.TextBox("Fecha") <!-- es la caja de texto que ingresa dato y carga variable -->
            </td>
            <td>
                @Html.DropDownList("numEst", ViewBag.ListaE as SelectList)<!-- drop donde se elige la estado-->

            </td>
            <td>
                <input type="submit" value="Filtrar" class=" btn btn-default" />
            </td>
            <td>
                @Html.ActionLink("Limpiar", "FormSeguimientoVenta")
            </td>
        </tr>
    </table>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NumVent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaVent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DirEnvIoVent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalVent)
        </th>
        <th></th>
    </tr>

    @foreach (_1_EC.Venta item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.NumVent)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FechaVent)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DirEnvIoVent)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TotalVent)
    </td>
    <td>
        @Html.ActionLink("Cambiar Estado", "CambiarEstado", "Venta", new { NumVent = item.NumVent }, null)
    </td>
</tr>
    }

</table>
