@model _1_EC.Empleado

@{
    ViewBag.Title = "FormLogueo";
}

<h2>Ingreso al Sistema</h2> <!-- etiqueta de título -->

@Html.ActionLink("Volver a pagina Inicio", "Index", "Home")

@ViewBag.Mensaje


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Empleado</h4>

        <hr /> <!-- linea divisoria-->

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



        <div class="form-group">
            <label class="control-label col-md-2">Usuario:</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.UsuEmp, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UsuEmp, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Password:</label>
            <div class="col-md-10">
                @Html.PasswordFor(model => model.PassEmp, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PassEmp, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LogIn" class="btn btn-default" />
            </div>
        </div>
    </div>
}